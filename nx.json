{
  "extends": "nx/presets/npm.json",
  "npmScope": "@talend",
  "tasksRunnerOptions": {
    "default": {
      "runner": "nx/tasks-runners/default",
      "options": {
        "cacheableOperations": ["build:lib", "test", "pre-release"],
        "runtimeCacheInputs": ["node -v", "yarn -v", "cat yarn.lock | sha512sum"]
      }
    }
  },
  "targetDefaults": {
    "build:lib": [
      {
        "dependsOn": ["^build:lib"],
        "outputs": ["./lib"]
      }
    ],
    "test": [
      {
        "dependsOn": ["^build:lib"],
        "outputs": []
      }
    ],
    "pre-release": [
      {
        "dependsOn": ["^build:lib", "^pre-release"],
        "outputs": ["./dist"]
      }
    ]
  },
  "affected": {
    "defaultBase": "master"
  },
  "pluginsConfig": {
    "@nrwl/js": {
      "analyzeSourceFiles": false
    }
  }
}
