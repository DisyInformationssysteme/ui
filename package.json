{
  "devDependencies": {
    "@changesets/cli": "^2.22.0",
    "commander": "^2.20.3",
    "cross-env": "^7.0.3",
    "cross-spawn": "^7.0.3",
    "husky": "^7.0.4",
    "i18next-scanner": "^3.1.0",
    "prettier": "^2.6.2",
    "nx": "14.0.5"
  },
  "scripts": {
    "postinstall": "nx run-many --target=build:lib --all",
    "pre-release": "nx run-many --target=pre-release --all",
    "start": "yarn workspace @talend/ui-playground run start",
    "info": "yarn workspaces --silent info > info.json",
    "release": "yarn changeset publish",
    "lint-staged": "lint-staged",
    "lint:es": "nx run-many --target=lint:es --all",
    "lint:style": "nx run-many --target=lint:style -all",
    "test": "cross-env TZ=Europe/Paris nx run-many --target=test --all",
    "test:update": "cross-env TZ=Europe/Paris nx run-many --target=test -u --all",
    "test:cov": "cross-env TZ=Europe/Paris nx run-many --target=test:cov",
    "test:demo": "nx run-many --target=test:demo",
    "test:cron": "nx run-many --target=test:cron",
    "start-components": "yarn workspace @talend/react-components run start",
    "start-containers": "yarn workspace  @talend/react-containers run start",
    "start-datagrid": "yarn workspace  @talend/react-datagrid run start",
    "start-stepper": "yarn workspace  @talend/react-stepper run start",
    "start-forms": "yarn workspace  @talend/react-forms run start",
    "start-theme": "yarn workspace @talend/bootstrap-theme run start",
    "changelog": "git log --pretty=\"format:%C(bold green)%ad%C(reset) %s\" --date=short --color",
    "prepare": "husky install"
  },
  "resolutions": {
    "@types/react": "^16.14.25",
    "@types/react-dom": "^16.9.14"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Talend/ui.git"
  },
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "packages/*",
    "tools/*",
    "fork/*"
  ],
  "lint-staged": {
    "*.{js,ts,tsx,jsx}": [
      "eslint --quiet --fix"
    ],
    "*.{json,md,mdx,html,js,jsx,ts,tsx}": [
      "prettier --write"
    ]
  }
}
