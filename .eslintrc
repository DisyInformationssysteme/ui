{
  "extends": "airbnb",
  "parser": "babel-eslint",
  "rules": {
    "indent": ["error", "tab"],
    "no-tabs": "off",
    "react/prefer-es6-class": 0,
    "react/jsx-indent": ["error", "tab"],
    "react/jsx-indent-props": ["error", "tab"],
    "react/jsx-filename-extension": [1, { "extensions": [".js"] }],
  },
  "env": {
    "es6": true,
    "browser": true,
    "jasmine": true,
    "jest": true
  },
  "globals": {},
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  }
}
