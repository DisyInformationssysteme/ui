{
  "extends": "airbnb",
  "parser": "babel-eslint",
  "rules": {
    "brace-style": [2, "stroustrup"],
    "indent": ["error", 2],
    "react/prefer-stateless-function": 2
  },
  "env": {
    "es6": true,
    "browser": true,
    "jasmine": true
  },
  "globals": {
    "jest": true,
    "beforeEachProviders": true,
    "injectAsync": true
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  }
}
